# Start and stop the pentaho server, etc
function call_pentaho {
    # action should be either start, stop, restart, status
    action=$1
    # Just in case -- sometimes starting the ba server alone isn't enough, you
    # must also start postgresql
    if [ "$action" == "start" ] || [ "$action" == "restart" ] ; then
        /Applications/pentaho/ctlscript.sh start postgresql
    elif [ "$action" == "status" ] ; then
        /Applications/pentaho/ctlscript.sh status postgresql
    fi
    /Applications/pentaho/ctlscript.sh $action baserver
}
alias puc='call_pentaho'

# Always use color when ls-ing
