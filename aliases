# Show all processes matching grep string
show_all() {
  search_term=$1
  ps aux | grep $search_term
}

# Kill all processes matching grep string
kill_all() {
  search_term=$1
  ps aux | grep $search_term | awk '{print $2}' | xargs kill -9
}

alias bgitk="gitk --simplify-by-decoration --all"
