# Easier navigation: .., ..., ~ and -
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."
alias ~="cd ~"
alias -- -="cd -"

# Shortcuts
alias d="cd ~/Desktop"
alias db="cd ~/Dropbox"
alias dl="cd ~/Downloads"
alias doc="cd ~/Documents"
alias df="cd ~/dotfiles"
alias ref="cd ~/Documents/Reference"
alias cl="clear"
alias p="python"

# Sourcing
alias so="source"
# Source the .profile
alias sop="source ~/.profile"

# programs
alias mvim='open -a "MacVim"'

# Start psql
alias start_psql='pg_ctl -D /usr/local/var/postgres -l logfile start'
alias stop_psql='pg_ctl -D /usr/local/var/postgres -l logfile stop'

# Postgres shortcuts for NI databases
# Adhoc database connections (ssanpietro user has permission to create schemas)
alias sanpadhoc='psql -h pentahodb3.colo.networkedinsights.com -d adhoc -U ssanpietro'
alias adhoc='psql -h pentahodb3.colo.networkedinsights.com -d adhoc -U adhoc'
# Socialsense database connection
alias socialsense='psql -h postgres2.colo.networkedinsights.com -d socialsense -U nireader'
# dev3 database connection
alias dev3='psql -h dev3.colo.networkedinsights.com -d adhoc -U niuser'
# dev1 database connection
alias dev1='psql -h dev1.colo.networkedinsights.com -d adhoc -U niuser'

# Start and stop the pentaho server, etc
function call_pentaho {
    # action should be either start, stop, restart, status
    action=$1
    # Just in case -- sometimes starting the ba server alone isn't enough, you
    # must also start postgresql
    if [ "$action" == "start" ] || [ "$action" == "restart" ] ; then
        /Applications/pentaho/ctlscript.sh start postgresql
    elif [ "$action" == "status" ] ; then
        /Applications/pentaho/ctlscript.sh status postgresql
    fi
    /Applications/pentaho/ctlscript.sh $action baserver
}
alias puc='call_pentaho'

# Always use color when ls-ing
alias ls='ls -GFh'
# List all files in long format
alias l="ls -l"
# Long format and hidden files
alias la="ls -al"
# List only directories
alias lsd='ls -l | grep "^d"'
# List all files, folders, and subfolders and files
alias lr='ls -R'
# Grep -- example usage: 'lg txt' short for 'ls grep | txt'
alias lg='ls | grep'
# Grep long version 
alias llg='ls -al | grep'
# List tmux sessions
alias tls='tmux ls'
# Start a new tmux session
alias tns='tmux new -s'
# Attach a tmux session
alias ta='tmux attach -t'
# Kill a tmux session
alias tk='tmux kill-session'
# virtualenvwrapper -- show all virtual environments
alias lv='ls $WORKON_HOME'
# virtualenvwrapper - long version
alias llv='ls -al $WORKON_HOME'

# `cat` with beautiful colors. requires Pygments installed.
# if not already installed: sudo easy_install Pygments
# Use ccat rather than remapping cat because pygmentize only works on single
# files. Still want ability to merge multiple files using 'cat' which you can't
# do with pygmentize
alias ccat='pygmentize -O style=monokai -f console256 -g'

# git root
alias gr='[ ! -z `git rev-parse --show-cdup` ] && cd `git rev-parse --show-cdup || pwd`'

# Get file size
alias fs="stat -f \"%z bytes\""

# Hide/show all desktop icons (useful when presenting)
alias hidedesktop="defaults write com.apple.finder CreateDesktop -bool false && killall Finder"
alias showdesktop="defaults write com.apple.finder CreateDesktop -bool true && killall Finder"

# If terminal takes a long time to load, delete the *.asl log files and it will
# be much snappier again: http://forums.macrumors.com/showthread.php?t=987949
alias cllogs="sudo rm -f /private/var/log/asl/*.asl"

# List open ports
alias lsports='lsof -i -P | grep -i "listen"'
# Kill port number <PID>
alias killport='kill -9'

