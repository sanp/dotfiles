# Fn to get the pid of whatever input string
get_pid() {
  grepstring="$1"
  echo `ps -fe | grep $grepstring | grep -v grep | tr -s " "|cut -d" " -f2`
}
alias gpid="get_pid"

# List all connections in ssh config file
alias lssh='cat $HOME/.ssh/config | grep Host'

