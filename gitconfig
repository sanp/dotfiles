[user]
	name = Steve SanPietro
	email = sanpietro.steve@gmail.com
[core]
	editor = vim
#	autocrlf = true
	excludesfile = /Users/steven.sanpietro/.gitignore_global
[credential]
	helper = osxkeychain
[push]
	default = simple
[alias]
	last = log -1 HEAD
	logg = log --pretty=format:\"%h - %an, %ar : %s\"
	unstage = reset HEAD --
	st = status
	co = checkout
	ci = commit
  br = branch
	rb = rebase
  sm = submodule
  lf = ls-files
  lfo = ls-files -o --exclude-per-directory=.gitignore
  lola = log --graph --decorate --pretty=oneline --abbrev-commit --name-status
  bra = branch --sort=-committerdate
  brd = branch --sort=committerdate
  brdate = for-each-ref --sort=-committerdate refs/heads/ --format='%(committerdate:short)  -  %(refname:short)'
[color]
	ui = true
[diff]
	tool = diffmerge
[merge]
	tool = diffmerge
[difftool "diffmerge"]
	cmd = diffmerge $LOCAL $REMOTE
[mergetool "diffmerge"]
	cmd = diffmerge --merge\n--result=$MERGED $LOCAL $BASE $REMOTE
	trustExitCode = true
#If you don't want git to create the .orig files
